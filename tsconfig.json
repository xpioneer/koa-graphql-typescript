{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["esnext"],
    "outDir": "./release/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@models/*": ["src/models/*"],
      "@entities/*": ["src/entities/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}